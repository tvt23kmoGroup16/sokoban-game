<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Profile Placeholder -->
    <TextView
        android:id="@+id/tv_profile_placeholder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:background="@drawable/circle_background"
        android:layout_marginBottom="16dp" />

    <!-- Current Username Display -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:text="Username: current_username" />

    <!-- "Enter new username" TextField -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"
        android:text="Enter new username below:" />

    <!-- Username EditText for new username -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New username"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:layout_gravity="center" />

    <!-- Current Email Display -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:text="Email: current_email@example.com" />

    <!-- "Enter new email" TextField -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"
        android:text="Enter new email address below:" />

    <!-- Email EditText for new email -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New email address"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:layout_gravity="center" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <!-- Reset Password Button -->
    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <!-- All Time Stats Section -->
    <TextView
        android:id="@+id/tv_all_time_stats_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Time Stats"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <androidx.cardview.widget.CardView
        android:id="@+id/stats_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/gray">

            <TextView
                android:id="@+id/tv_levels_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levels Completed: 0"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_total_moves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Moves: 0"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Time: 0 seconds"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
