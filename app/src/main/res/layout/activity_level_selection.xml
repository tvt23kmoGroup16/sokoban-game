<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title for level selection -->
    <TextView
        android:id="@+id/tv_select_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Level"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"/>

    <!-- Button for continue -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_marginBottom="16dp"/>

    <!-- Buttons for levels 1, 2, 3, 4, 5 -->
    <Button
        android:id="@+id/btn_level_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_level_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 2"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_level_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 3"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_level_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 4"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_level_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 5"
        android:layout_marginBottom="8dp"/>
</LinearLayout>
